<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".QrBarGenerator">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="top|center"
        android:background="@color/white"
        android:elevation="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/qr_bar_code_generate"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/reset"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ic_reload_data"
            app:tint="@color/secondary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/button_bg"
            android:gravity="top"
            android:hint="@string/enter_the_data_to_generate_qr_bar_code"
            android:textColorHint="@color/darkGrey"
            android:inputType="textMultiLine"
            android:lines="100"
            android:maxLines="10"
            android:minLines="5"
            android:padding="10sp"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/qrGenerate"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginEnd="10sp"
                android:drawableStart="@drawable/qr_code"
                android:drawableTint="@color/white"
                android:letterSpacing="0.0"
                android:text="@string/generate_qr_code"
                android:textSize="12sp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/barGenerate"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:drawableStart="@drawable/bar_code"
                android:drawableTint="@color/white"
                android:letterSpacing="0.0"
                android:text="@string/generate_bar_code"
                android:textSize="12sp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/resLoader"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="5dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/purple_200" />

            <ImageView
                android:id="@+id/resImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:scaleType="center" />

            <LinearLayout
                android:id="@+id/resOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_share_24"
                    app:tint="@color/secondary" />

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25sp"
                    android:src="@drawable/round_save_white_24"
                    app:tint="@color/secondary" />

                <ImageView
                    android:id="@+id/resClose"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:src="@drawable/round_close_white_24"
                    app:tint="@color/secondary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>