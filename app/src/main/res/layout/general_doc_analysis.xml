<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".GeneralDocAnalysis">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="top|center"
        android:background="@color/white"
        android:elevation="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="25sp"
            android:paddingEnd="25sp"
            android:text="@string/general_document_analysis"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C3645"
        android:orientation="vertical"
        android:padding="10sp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/inputImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/imgDescription" />
            <LinearLayout
                android:id="@+id/loaderContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#80FFFFFF"
                android:gravity="center"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/imageLoader"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Large"
                    android:indeterminateTint="#009688"
                    android:indeterminateTintMode="src_in" />
                <TextView
                    android:id="@+id/loaderMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/extract"
                    android:textColor="#009688"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/process_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="0sp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/getKey"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="4dp"
                android:layout_weight="1"
                android:background="@drawable/general_input_doc_border"
                android:scrollbarStyle="insideInset"
                android:spinnerMode="dialog"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/getValue"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="4dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="4dp"
                android:layout_weight="1"
                android:background="@drawable/general_input_doc_border"
                android:hint="@string/edittext_hint"
                android:textColorHint="#FFA500"
                android:textColor="#FFA500"
                android:textSize="14sp" />

            <Button
                android:id="@+id/generalVerify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:letterSpacing="0.0"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="0sp"
                android:layout_marginEnd="2sp"
                android:text="@string/verify"
                android:textSize="12sp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/generalExtract"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:letterSpacing="0.0"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="0sp"
                android:layout_marginEnd="2sp"
                android:text="@string/extract"
                android:textSize="12sp"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#CDFFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plainText"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="5sp"
                android:text="@string/data"
                android:textAllCaps="true"
                android:textColor="#0A6E93"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/jsonText"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5sp"
                android:text="@string/json"
                android:textAllCaps="true"
                android:textColor="#0A6E93"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/showResult"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="3sp"
            android:background="#E8E8E8"
            android:padding="10sp"
            android:scrollbars="vertical"
            android:textColor="@color/black" />

        <ScrollView
            android:id="@+id/showResultInTableView"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="3sp"
            android:background="#E8E8E8"
            android:contentDescription="@string/app_name"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/showResultInTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:textColor="@color/black" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/extract"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/general_doc_analysis"
                android:contentDescription="@string/imgDescription"
                app:tint="@color/Gray" />

            <ImageView
                android:id="@+id/copy"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/copy"
                android:contentDescription="@string/imgDescription"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/share"
                android:contentDescription="@string/imgDescription"/>

            <ImageView
                android:id="@+id/saveJson"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/save1"
                android:visibility="gone"
                android:contentDescription="@string/imgDescription"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>